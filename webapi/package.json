{
  "name": "finflux-webapi",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node scripts/migrate-safe.js",
    "seed": "knex seed:run",
    "build:client": "node scripts/copy-webapp.js",
    "vercel-build": "npm run build:client",
    "prepare-deploy": "node scripts/prepare-deployment.js",
    "db:sqlite": "node scripts/switch-db.js sqlite",
    "db:postgres": "node scripts/switch-db.js postgres", 
    "db:status": "node scripts/switch-db.js status",
    "dev:sqlite": "npm run db:sqlite && npm run dev",
    "dev:postgres": "npm run db:postgres && npm run dev",
    "migrate:sqlite": "npm run db:sqlite && npm run migrate",
    "migrate:postgres": "npm run db:postgres && npm run migrate",
    "seed:sqlite": "npm run db:sqlite && npm run seed",
    "seed:postgres": "npm run db:postgres && npm run seed"
  },
  "dependencies": {
    "express": "^4.18.2",
    "knex": "^3.0.1",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
