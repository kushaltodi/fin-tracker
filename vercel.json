{
  "version": 2,
  "name": "finflux",
  "buildCommand": "cd webapi && npm install && npm run vercel-build",
  "builds": [
    {
      "src": "webapi/src/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "webapi/build/**",
        "maxLambdaSize": "10mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "webapi/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "webapi/src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "USE_POSTGRES": "true"
  },
  "functions": {
    "webapi/src/server.js": {
      "maxDuration": 30
    }
  }
}